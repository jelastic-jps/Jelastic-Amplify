{
  "jpsVersion": "0.99",
  "jpsType": "update",
  "build": "20180119",
  "application": {
    "id": "nginx-amplify-agent-bl",
    "targetNodes": {
      "nodeType": [
        "nginx",
        "nginx-dockerized"
      ]
    },
    "name": "NGINX Amplify",
    "version": "latest",
    "homepage": "https://www.nginx.com/products/nginx-amplify/",
    "categories": [
      "apps/dev-and-admin-tools"
    ],
    "logo": "https://raw.githubusercontent.com/jelastic-jps/nginx-amplify/master/images/nginx-amplify-logo.png",
    "description": {
      "text": "NGINX Amplify provides comprehensive monitoring for NGINX, helping to proactively detect and fix issues that are related to running and scaling your applications.<div class='warning-lower' style='color:#b7c3da'>To get an API key, create an <a href=\"https://amplify.nginx.com/signup/\" target=\"_blank\" rel=\"noopener noreferrer nofollow\">Amplify</a> account and refer to settings to copy it.</div>",
      "short": "NGINX Amplify is a tool for NGINX server metrics monitoring."
    },
    "settings": {
      "fields": [
        {
          "type": "string",
          "name": "api_key",
          "caption": "API key",
          "vtype": "alphanum",
          "vtypeText": "Alphanumeric input only.",
          "required": true,
          "default": "0000000000000000000000000000000000000000"
        }
      ]
    },
    "onInstall": [
      "deploy"
    ],
    "onUninstall": [
      "uninstall"
    ],
    "actions": {
      "deploy": {
        "executeShellCommands": [
          {
            "nodeGroup": "bl",
            "commands": [
              "curl -L -O https://github.com/nginxinc/nginx-amplify-agent/raw/master/packages/install.sh",
              "API_KEY='${settings.api_key}' sh ./install.sh",
              "curl -fsSL 'https://raw.githubusercontent.com/jelastic-jps/nginx-amplify/master/configs/stub_status.conf' -o /etc/nginx/conf.d/stub_status.conf",
              "kill -HUP `cat /var/run/nginx.pid`",
              "chkconfig amplify-agent on"
            ],
            "user": "root"
          }
        ]
      },
      "uninstall": {
        "executeShellCommands": [
          {
            "nodeGroup": "bl",
            "commands": [
              "yum remove nginx-amplify-agent",
              "rm -f /etc/nginx/conf.d/stub_status.conf",
              "kill -HUP `cat /var/run/nginx.pid`"
            ],
            "user": "root"
          }
        ]
      }
    },
    "success": "NGINX Amplify add-on has been applied to the <b>${env.envName}</b> environment.<br>Enter Amplify <a href=\"https://amplify.nginx.com/dashboard/\" target=\"_blank\" rel=\"noopener noreferrer nofollow\">dashboard </a>to view the collected data on your NGINX instance(s) metrics.<div class='warning-lower' style='color:#b7c3da'><b>Note:</b> For the RAM and Disk usage monitoring, please refer to the Statistics section at Jelastic dashboard, as Amplify can present not accurate values for these two parameters.</div>"
  }
}
